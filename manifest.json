{
    "name": "Twitch Bonus Clicker",
    "description": "Simple extension, which automatically collects Twitch Bonus received for watching streams.",
    "version": "1.1",
    "manifest_version": 3,
    "icons": {
      "256": "icon_256.png",
      "96": "icon_96.png",
      "32": "icon_32.png"
    },
    "content_scripts": [
        {
            "matches": ["*://*.twitch.tv/*"],
            "js": ["contentScript.js"]
        }
    ]
  }
